<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.registerCycle.NewPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/img_forget_email"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_logo" />

        <LinearLayout
            android:id="@+id/linear_NewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/img_forget_email">
            <EditText
                android:id="@+id/NewPassword_Code_Et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_rounded_corner"
                android:hint="كود التحقيق"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/NewPassword_New_Et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_rounded_corner"
                android:hint="كلمة المرور الجديدة"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/NewPassword_Check_Et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_rounded_corner"
                android:hint="رقم الجوال"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                />

        </LinearLayout>
        <Button
            android:id="@+id/NewPassword_Send_Btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/linear_NewPassword"
            android:layout_marginTop="20dp"
            android:background="#3AB54A"
            android:text="تغيير كلمة المرور"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>